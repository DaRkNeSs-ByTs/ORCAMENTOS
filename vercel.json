{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/servicos",
      "methods": [
        "GET",
        "POST"
      ],
      "dest": "/backend/server.js"
    },
    {
      "src": "/servicos/(.*)",
      "methods": [
        "GET",
        "DELETE"
      ],
      "dest": "/backend/server.js"
    },
    {
      "src": "/img/(.*)",
      "dest": "/frontend/img/$1"
    },
    {
      "src": "/script.js",
      "dest": "/frontend/script.js"
    },
    {
      "src": "/style.css",
      "dest": "/frontend/style.css"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}