{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/servicos",
      "dest": "backend/server.js"
    },
    {
      "src": "/servicos/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/script.js",
      "dest": "frontend/script.js"
    },
    {
      "src": "/style.css",
      "dest": "frontend/style.css"
    },
    {
      "src": "/img/(.*)",
      "dest": "frontend/img/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ]
}