{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/servicos",
      "methods": [
        "GET",
        "POST"
      ],
      "dest": "/backend/server.js"
    },
    {
      "src": "/servicos/(.*)",
      "methods": [
        "GET",
        "DELETE"
      ],
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)\\.(?:js|css|html|png|jpg|ico|svg)$",
      "dest": "/frontend/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}